<div class="single-match">
  <div class="match-content">
    <div class="profile-picture">
      <img src="../../public/media/images/bobby/{{ dogImage }}"
           alt="Profile picture">
    </div>

    <div class="chat-info">
      <h2 class="chat-name">
        {{ dogName }}
      </h2>
      <div class="chat-status">
        {{ chatStatus }}
      </div>
      <div class="last-message">
        {{ lastMessage }}
      </div>

    </div>
  </div>
  <img src="../../public/media/images/arrowdown.svg"
       alt="Go to chat"
       class="chat-button">
</div>